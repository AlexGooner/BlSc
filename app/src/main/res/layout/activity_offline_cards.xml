<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- Панель управления -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnDownloadMap"
            android:layout_width="120dp"
            android:layout_height="68dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/pink"
            android:text="Скачать"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnDeleteMap"
            android:layout_width="120dp"
            android:layout_height="68dp"
            android:layout_marginStart="6dp"
            android:backgroundTint="@color/black"
            android:text="@string/delete_offline_map"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnViewOfflineMap"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Просмотреть"
            android:onClick="onViewOfflineMapClick" />

    </LinearLayout>

    <!-- Прогресс загрузки -->

    <LinearLayout
        android:id="@+id/layoutProgress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="108dp"
        android:background="@color/grey"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Подготовка к загрузке..."
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61">

        <!-- Карта -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>